// This is the root concept of the entire application
_concept {
    #resource '[[=layout.xhtml]]'
    #[knowledge]:Integer
}

letter {->(extends)_concept
    title 'Letter From Hogwarts'
    #resource '[[=letter.xhtml]]'
}

hogwarts {->(extends)_concept
    <-(parent)hogwarts/basic {}
