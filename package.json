{
  "name": "gale_hogwarts",
  "version": "1.0.0",
  "description": "Provides the code for an adaptable learning experience and Hogwarts School of Witchcraft and Wizardry",
  "scripts": {
    "scss": "node-sass --output-style compressed -o css scss/main.scss",
    "autoprefixer": "postcss -u autoprefixer -r css/*",
    "build:css": "npm run scss && npm run autoprefixer",
    "watch:css": "onchange \"scss/*.scss\" -- npm run build:css",
    "serve": "http-server -p 8000",
    "start": "npm run build:css && parallelshell \"npm run serve\" \"npm run watch:css\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stanrogo/gale_hogwarts.git"
  },
  "author": "Stanley Clark",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/stanrogo/gale_hogwarts/issues"
  },
  "homepage": "https://github.com/stanrogo/gale_hogwarts#readme",
  "devDependencies": {
    "autoprefixer": "6.7.6",
    "http-server": "0.9.0",
    "node-sass": "4.5.0",
    "onchange": "3.2.1",
    "parallelshell": "2.0.0",
    "postcss-cli": "3.0.0-beta"
  }
}
